@model CoreCrudRelationalDb.Models.Entities.Calisan

@{
    ViewData["Title"] = "Edit";
}


<h4>Çalışanı Düzenle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      @*      Create view'ın farklı olan taraf gizli bir id parametresi tutulmasıdır, bu sayede form post edilirken
            Id bilgisi taşınır ve o unique değer üzerine yapılmış değişiklikler eklenir.*@
          <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="TamAd" class="control-label">Tam Ad</label>
                <input asp-for="TamAd" class="form-control" />
                <span asp-validation-for="TamAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmanId" class="control-label">Departman</label>
                <select asp-for="DepartmanId" class="form-control" asp-items="ViewBag.Departmanlar"></select>
                <span asp-validation-for="DepartmanId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
