@model IEnumerable<CoreCrudRelationalDb.Models.Entities.Departman>

@{
    ViewData["Title"] = "Index";
}

@if (@TempData["mesaj"] != null)
{
    <div class="alert alert-success">
        @TempData["mesaj"]
    </div>
}
<div class="d-flex justify-content-between align-items-center">
    <h1>Çalışanlar</h1>
    <a asp-controller="Departman" asp-action="Create" class="btn btn-primary mb-2">Yeni Departman</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
               <td class="text-right">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger" >Düzenle</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-info" onclick="confirm('Emin misiniz?')">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
